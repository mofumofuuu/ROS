<?xml version="1.0"?>
<launch>
    <arg name="robot_type" value="$(env ROBOT_TYPE)" doc="robot_type [X1,X3,X3plus,R2,X7]"/>
    <!-- Arguments -->
    <arg name="move_forward_only" default="false"/>
    <arg name="odom_frame_id" default="odom"/>
    <arg name="base_frame_id" default="base_link"/>
    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find yahboomcar_gazebo)/param/common/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find yahboomcar_gazebo)/param/common/local_costmap_params.yaml" command="load"/>
        
        <rosparam file="$(find yahboomcar_gazebo)/param/common/costmap_common_params_$(arg robot_type).yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find yahboomcar_gazebo)/param/common/costmap_common_params_$(arg robot_type).yaml" command="load" ns="local_costmap"/> 
        
        <rosparam file="$(find yahboomcar_gazebo)/param/common/move_base_params.yaml" command="load"/>

        <rosparam file="$(find yahboomcar_gazebo)/param/common/dwa_local_planner_params_$(arg robot_type).yaml"
                  command="load"/>
        <param name="base_local_planner" type="string" value="dwa_local_planner/DWAPlannerROS"/>
<!--        <rosparam file="$(find yahboomcar_gazebo)/param/common/teb_local_planner.yaml" command="load"/>-->
<!--        <param name="base_local_planner" type="string" value="teb_local_planner/TebLocalPlannerROS"/>-->
        <!--param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/-->
        <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)"/>
        
        <param name="controller_frequency" value="3.0"/>
        <param name="controller_patience" value="15.0"/>
        <remap from="cmd_vel" to="cmd_vel"/>
        <remap from="odom" to="odom"/>
    </node>
</launch>
